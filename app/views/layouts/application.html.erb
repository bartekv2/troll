<!DOCTYPE html>
<html>
  <head>
    <title>Troll the Troll</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container mx-auto relative">
      <h1 class="text-3xl font-bold text-center mb-12"><%= active_link_to 'Troll The Troll', root_path %></h1>
      <div class="md:absolute md:top-0 md:right-0 mt-4 mb-4 md:mb-0">
        <% if user_signed_in? %>
          <%= current_user.username %>
          <%= active_link_to 'Sign out', destroy_user_session_path, method: :delete, class: "ml-1" %>
        <% else %>
          <%= active_link_to 'Log in', new_user_session_path, class: "mr-2" %>
          <%= active_link_to "Register", new_user_registration_path %>
        <% end %>
      </div>
      <% if !flash.empty? %>
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, class: "flash #{key} w-auto inline-block" %>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
