<%= simple_form_for @theft do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :cake_id, value: @cake_id || 0 %>
  <%= f.hidden_field :cake_cal, value: @cake_cal || 100 %>
  <%= f.hidden_field :time_of_next, value: @time_of_next %>
  <%= f.hidden_field :next_cake_id, value: @next_cake_id || 0 %>
  <%= f.hidden_field :next_cake_cal, value: @next_cake_cal || 100 %>
  <%= f.hidden_field :exact_time_of_previous, value: @exact_time_of_previous %>
  <%= f.hidden_field :exact_time, value: @exact_time %>
  <%= image_submit_tag "#{@cake_id}.png", style: 'height:auto; width:auto; margin-bottom: 140px; margin-left: 42px;', class: "absolute bottom-0" %>
<% end %>
