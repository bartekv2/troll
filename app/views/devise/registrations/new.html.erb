<% content_for :title, "Create Account - Troll the Troll" %>
<div class="flex justify-center">
  <div class="md:my-10 px-8 pt-6 pb-8 mb-4 max-w-sm w-full flex justify-center">
    <div>
      <h2 class="mb-4">Register</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs w-full">
          <%= f.input :username,
                      required: true,
                      autofocus: true,
                      placeholder: "Username",
                      label: false,
                      input_html: { autocomplete: "username" } %>
          <%= f.input :email,
                      required: true,
                      placeholder: "Email",
                      label: false,
                      input_html: { autocomplete: "email", class: "mt-4" }%>
          <%= f.input :password,
                      required: true,
                      placeholder: "Password",
                      label: false,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "mt-4" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      placeholder: "Password confirmation",
                      label: false,
                      input_html: { autocomplete: "new-password", class: "mt-4" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create Account", class: "btn my-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
