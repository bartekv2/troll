<% content_for :title, "Forgotten password - Troll the Troll" %>
<div class="flex justify-center">
  <div class="md:my-10 shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-sm w-full flex justify-center">
    <div>
      <h2 class="mb-4">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      placeholder: "Email",
                      label: false,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: "btn my-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
